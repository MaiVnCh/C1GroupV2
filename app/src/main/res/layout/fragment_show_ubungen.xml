<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ShowUbungenFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Let's go."
        android:padding="@dimen/padding"
        android:textSize="@dimen/textheading"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_image_dialog"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edt_edit_number"
                android:hint="No"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/shape_corner_radius_blue"
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_width="60dp"
                android:padding="@dimen/padding_small"
                android:layout_height="40dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginRight="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/edt_edit_theme"
                    android:paddingLeft="@dimen/padding"
                    android:paddingTop="@dimen/padding_small"
                    android:hint="No Theme"
                    android:paddingRight="@dimen/padding"
                    android:textStyle="bold"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/textsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/edt_edit_instruction"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingBottom="@dimen/padding_small"
                    android:hint="No Instruction"
                    android:textSize="@dimen/textsize"
                    android:textColor="@color/colorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/edt_edit_example"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingBottom="@dimen/padding_small"
                android:hint="No example"
                android:textSize="@dimen/textsize"
                android:textStyle="italic"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/edt_edit_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingBottom="@dimen/padding_small"
                android:hint="No content"
                android:textSize="@dimen/textsize"
                android:textColor="@color/colorText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/edt_edit_answer"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:paddingBottom="@dimen/padding_small"
                android:hint="No keys available."
                android:textSize="@dimen/textsize"
                android:textStyle="italic"
                android:textColor="@color/error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
            android:id="@+id/btn_edit_detail"
            android:text="Back"
            android:background="@drawable/shape_corner_radius_blue"
            android:layout_margin="@dimen/padding_small"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:soundEffectsEnabled="true"
            android:layout_marginLeft="@dimen/padding"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:background="@color/colorSecondaryDark"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>
</FrameLayout>