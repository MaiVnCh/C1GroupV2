<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/paddinglarge"
    android:orientation="vertical"
        android:background="@drawable/bg_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3"
    android:orientation="vertical">

        <TextView
            android:background="@drawable/bg_image_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/paddingmedium"
            android:paddingBottom="@dimen/paddingmedium"
            android:text="Please add your question."
            android:textColor="@android:color/white"
            android:textAppearance="@android:anim/slide_in_left"
            android:textStyle="bold"
            android:textSize="@dimen/textheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="@dimen/paddinglarge"
        android:paddingRight="@dimen/paddinglarge"
        android:paddingLeft="@dimen/paddinglarge"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel_dialog_qa"
            android:background="@drawable/bg_button_cancel"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/textsize"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_ok_dialog_qa"
            android:background="@drawable/bg_button_ok"
            android:layout_marginLeft="@dimen/small"
            android:textAllCaps="false"
            android:text="Ok"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="@dimen/textsize"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/paddinglarge"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <EditText
                android:id="@+id/edt_add_question"
                android:layout_margin="@dimen/paddingmedium"
                android:textStyle="bold"
                android:gravity="center"
                android:hint="Add questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edt_add_answer"
                android:layout_margin="@dimen/paddingmedium"
                android:textStyle="bold"
                android:gravity="center"
                android:hint="Add answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/paddinglarge"/>

        </LinearLayout>
        
    </LinearLayout>
