<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tumoi_onclick"
    android:gravity="center"
    android:backgroundTint="@color/surface"
    android:background="?selectableItemBackground">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="@dimen/small60"
        android:orientation="vertical">
    <TextView
        android:paddingLeft="@dimen/paddingmedium"
        android:paddingTop="@dimen/padding_small"
        android:id="@+id/tv_germanword"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:paddingLeft="@dimen/paddingmedium"
        android:paddingTop="@dimen/padding_small"
        android:id="@+id/tv_englishmeaning"
        android:textColor="@color/error"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    </LinearLayout>
        <TextView
            android:paddingTop="@dimen/padding_small"
            android:paddingLeft="@dimen/padding_small"
            android:id="@+id/tv_example"
            android:textStyle="italic"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="@dimen/small60"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_delete"
            android:text="X"
            android:textColor="@color/colorPrimaryLight"
            android:background="@drawable/shape_oval_transparent"
            android:textSize= "@dimen/textsize"
            android:layout_width= "@dimen/paddinglarge"
            android:layout_height="@dimen/paddinglarge"/>
    </LinearLayout>
</LinearLayout>