<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:id="@+id/vp_exercises">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="@dimen/paddingmedium"
            android:id="@+id/tv_essay_number"
            android:hint="No."
            android:textSize="@dimen/textsize"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
        android:paddingTop="@dimen/paddinglarge"
        android:paddingLeft="@dimen/paddingmedium"
        android:id="@+id/tv_essay_theme"
        android:hint="Theme"
        android:textSize="@dimen/textsize"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:paddingLeft="@dimen/paddingmedium"
        android:id="@+id/tv_essay_instruction"
        android:text="Introduction"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingLeft="@dimen/paddingmedium"
        android:id="@+id/tv_essay_tips"
        android:hint="Tip 1. ......... Tip 2............."
        android:textColor="@color/colorSecondaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingLeft="@dimen/paddingmedium"
        android:id="@+id/tv_essay_conclusion"
        android:hint="Conclusion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>