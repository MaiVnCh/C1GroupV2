<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragment.NewWordListFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="New words"
            android:paddingTop="@dimen/paddingmedium"
            android:paddingLeft="@dimen/paddinglarge"
            android:paddingBottom="@dimen/padding_small"
            android:textStyle="bold"
            android:textSize="@dimen/textheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="@dimen/xlarge"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="New Words"
                android:textStyle="italic"
                android:paddingLeft="@dimen/paddingmedium"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Example/explaination/symnonym/antonym"
                android:paddingLeft="@dimen/padding_small"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/btn_delete"
                android:text="Delete"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/padding_small"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_home_newwords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</FrameLayout>