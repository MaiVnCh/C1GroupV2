<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.c1groupv2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:theme="@style/AppTheme"
        android:allowBackup="true"
        android:icon="@mipmap/c1logofinal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/c1logofinal"
        android:supportsRtl="true"
        >
        <activity android:name=".activity.EssayActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"></activity>
        <activity
            android:name=".activity.LessonActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"></activity>
        <activity android:name=".MainActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>